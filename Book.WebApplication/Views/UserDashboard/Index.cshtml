</html>

@section Scripts {

    <script type="text/javascript" src="~/dist/jalalidatepicker.min.js"></script>

    <script src="~/js/MainPageQuery/UserDashboard.js"></script>
    <script src="~/js/MainPageQuery/UserPhoto.js"></script>






}