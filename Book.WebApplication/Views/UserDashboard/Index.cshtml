@using Microsoft.AspNet.Identity
@using Microsoft.AspNetCore.Identity



@{
    Layout = "_Layout";

    var photo = ViewBag.Photo as Application.Features.UserPhoto.UserPhotoDto ?? new Application.Features.UserPhoto.UserPhotoDto();

}


<!doctype html>
<html lang="en">


<!-- Mirrored from html-template.spider-themes.net/bookjar/my-account.html by HTTrack Website Copier/3.x [XR&CO'2014], Sat, 16 Nov 2024 07:59:05 GMT -->

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="assets/img/favicoprn.png">
    <link rel="stylesheet" type="text/css" href="~/dist/jalalidatepicker.min.css" />

    <!-- Bootstrap CSS -->
    <link href="~/assets/vendors/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendors/elagent-icon/style.css" rel="stylesheet">
    <link href="~/assets/vendors/font-awesome/css/all.min.css" rel="stylesheet">
    <link href="~/assets/vendors/icomoon/style.css" rel="stylesheet">
    <link href="~/assets/vendors/themify-icon/themify-icons.css" rel="stylesheet">
    <link href="~/assets/vendors/animation/animate.css" rel="stylesheet">
    <link href="~/assets/css/style.css" rel="stylesheet">
    <link href="~/assets/css/responsive.css" rel="stylesheet">


    <title>کتاب باز</title>
</head>

<body data-scroll-animation="true">

    <div class="body_wrapper">

        <div class="toast-container position-fixed p-3">
            <div id="cartToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    <strong class="me-auto">اضافه به سبدخرید</strong>
                    <small>همین الان</small>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    کالا به سبد خرید اضافه شد!
                </div>
            </div>
        </div>

        <!-- Header area -->


        <div class="cart-header-separator"></div>

        <!-- Dashboard area -->
        <section class="bj_account_dashboard" data-bg-color="#f5f5f5">
            <div class="container rtl">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="account_dashboard_sidebar container">
                            <div class="sidebar_widget_body d-flex account_dashboard_sidebar_profile row">
                                <div class="">

                                    <img src="/img/UserPhoto/@(photo.Id).webp?@(DateTime.Now.ToBinary())" alt="account" />

                                </div>
                                <div class="">
                                    
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        var FirstName = User.FindFirst("FullName")?.Value;
                                        <div class="name">@FirstName</div>
                                    }


                                </div>
                                <div class="col-12">
                                    <form method="post" asp-controller="Auth" asp-action="Logout">
                                        @Html.AntiForgeryToken()
                                        <button style="margin-top:5px ; font-size:14px" type="submit" class="btn btn-danger">خروج</button>
                                    </form>
                                </div>
                            </div>
                            <div class="sidebar_widget_body p-0">
                                <ul class="sidebar_widget_menu">
                                    <li><a class="active " href="my-account.html">پروفایل من</a></li>
                                    <li><a href="my-address.html">آدرس من</a></li>
                                    <li><a href="my-orders.html">سفارشات من</a></li>
                                    <li><a href="my-ebook-library.html">کتاب خانه الکتورنیکی من </a></li>
                                    <li><a href="my-list.html">لیست های من</a></li>
                                    <li><a href="my-wishlist.html">علاقه مندی های من</a></li>
                                    <li><a href="my-rating-reviews.html">رتبه بندی و نظرات من</a></li>
                                    <li><a href="my-following-authors.html">نویسندگان بعدی من</a></li>
                                </ul>
                            </div>
                        </div>


                    </div>
                    <div class="col-lg-9">
                        <div class="account_dashboard_body">
                            <div class="account_dashboard_content">
                                <div class="account_dashboard_content_header">
                                    اطلاعات شخصی
                                </div>
                                <div class="content_body">
                                    <form id="uploadProfilePictureForm" enctype="multipart/form-data" class="mb-4">
                                        <div class="row gy-4">
                                            <div class="col-12">
                                                <div class="profile-picture-form">
                                                    <div class="preview">
                                                        <img id="profilePreview" class="img-fluid" alt="UserPhoto" src="~/img/UserPhoto/@(photo.Id).webp?@(DateTime.Now.ToBinary())">
                                                    </div>
                                                    <div class="upload_btn">
                                                        آپلود عکس جدید
                                                        <input type="file" id="profile-picture-file" name="profile_picture">
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                    <form action="#" id="userProfileForm">
                                        <div class="row gy-4">

                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <input type="text" class="form-control" id="firstName" required>
                                                    <label class="floating-label" for="firstName">اسم کوچک</label>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <input type="text" class="form-control" id="lastName" required>
                                                    <label class="floating-label" for="lastName">نام خانوادگی</label>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-label" for="birthDate">تاریخ تولد شما</label>
                                                    <input type="text" data-jdp class="form-control" id="birthDate" required>

                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-label">جنسیت</label>
                                                    <div class="d-flex flex-row">
                                                        <div class="form-check me-3">
                                                            <input class="form-check-input" type="radio" value="0" id="genderMale" name="gender_radio">
                                                            <label class="form-check-label" for="genderMale">آقا</label>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" value="1" id="genderFemale" name="gender_radio">
                                                            <label class="form-check-label" for="genderFemale">خانم</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <input class="form-control" type="email" id="email_address" required>
                                                    <label class="floating-label" for="email_address">ایمیل آدرس</label>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <input class="form-control" type="text" id="phone" required>
                                                    <label class="floating-label" for="phone">شماره موبایل</label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="account_dashboard_content_title mt-3">
                                            <h4>پسورد</h4>
                                        </div>
                                        <div class="row mt-1 gy-3">
                                            <!--Password Field-->
                                            <div class="col-lg-6">
                                                <div class="form-group pass-field-with-icon">
                                                    <input type="password" id="password" class="form-control" required>
                                                    <label class="floating-label" for="password">پسورد جدید</label>
                                                    <i data-toggleTarget="#password" class="icon fas fa-eye toggle-password"></i>
                                                </div>
                                            </div>
                                            <!--Confirm Password Field-->
                                            <div class="col-lg-6">
                                                <div class="form-group pass-field-with-icon">
                                                    <input type="password" id="confirmPassword" class="form-control" required>
                                                    <label class="floating-label" for="confirmPassword">تایید رمز عبور</label>
                                                    <i data-toggleTarget="#confirmPassword" class="icon fas fa-eye toggle-password"></i>
                                                </div>
                                            </div>
                                        </div>

                                        <button type="submit" id="saveBtn" class="bj_theme_btn mt-3" disabled>ذخیره</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </section>
        <!-- Dashboard area -->
        <!-- footer area -->
    </div>
    <!-- Back to top button -->
    <a id="back-to-top" title="برگشت به بالا"></a>
    <!-- Optional JavaScript; choose one of the two! -->
    <script src="~/assets/js/jquery-3.6.0.min.js"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->

    <script src="~/assets/js/preloader.js"></script>
    <script src="~/assets/vendors/bootstrap/js/popper.min.js"></script>
    <script src="~/assets/vendors/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets/vendors/wow/wow.min.js"></script>









</body>


